@page "{id:int}"
@model Project_Group5.Pages.Admin.RoomManagement.EditFeedbackModel
@{
    ViewData["Title"] = "Edit Feedback";
    Layout = "_Layout";
}

<style>
    /* Page Container Styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Form Container Styling */
    form {
        width: 100%;
        max-width: 500px;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Form Elements */
    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
        display: block;
    }

    input[type="text"],
    textarea,
    select {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s ease;
    }

        input[type="text"]:disabled {
            background-color: #e9ecef;
            color: #6c757d;
        }

    textarea {
        resize: vertical;
        min-height: 100px;
    }

        /* Input Focus State */
        input:focus,
        textarea:focus,
        select:focus {
            border-color: #4CAF50;
            outline: none;
        }

    /* Button Styling */
    .btn {
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;
        transition: background-color 0.3s ease;
        color: #fff;
    }

    .btn-primary {
        background-color: #4CAF50;
        border: none;
    }

        .btn-primary:hover {
            background-color: #45a049;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<h2>Edit Feedback</h2>

<form method="post">
    <div class="form-group">
        <label for="Customer">Customer</label>
        <input type="text" id="Customer" class="form-control" value="@Model.Feedback.Customer?.Name" disabled />
    </div>
    <div class="form-group">
        <label for="Room">Room</label>
        <input type="text" id="Room" class="form-control" value="@Model.Feedback.Room?.Roomtype?.Name" disabled />
    </div>
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea id="Content" class="form-control" asp-for="Feedback.Content"></textarea>
    </div>
    <div class="form-group">
        <label for="Rating">Rating</label>
        <select id="Rating" class="form-control" asp-for="Feedback.Rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Feedback" class="btn btn-secondary">Cancel</a>
</form>
