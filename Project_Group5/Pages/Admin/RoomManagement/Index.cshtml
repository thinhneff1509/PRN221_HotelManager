@page
@model Project_Group5.Pages.RoomManagement.IndexModel
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}
<h2>Quản lý Phòng</h2>

<div class="container mt-4">
    <!-- Tìm kiếm phòng -->
    <form method="get" class="form-inline mb-4">
        <input type="text" name="searchString" class="form-control mr-2" placeholder="Tìm kiếm phòng" value="@Request.Query["searchString"]" />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>

    <!-- Danh sách phòng -->
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Số Phòng</th>
                <th>Loại Phòng</th>
                <th>Trạng Thái</th>
                <th>Hình Ảnh</th> <!-- Thêm cột hình ảnh -->
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.Roomtype?.Name</td>
                    <td>@room.Status</td>
                    <td>
                        @if (room.ImageRooms.Any()) // Kiểm tra nếu có ảnh
                        {
                            var image = room.ImageRooms.FirstOrDefault();
                            <img src="~/images/@image.Path" alt="Hình ảnh phòng" style="width: 100px; height: auto; margin-right: 5px;" /> <!-- Hiển thị ảnh -->
                        }
                        else
                        {
                            <span>Không có hình ảnh</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-warning" data-toggle="modal" data-target="#editModal"
                                data-room-id="@room.Id"
                                data-room-number="@room.RoomNumber"
                                data-room-status="@room.Status"
                                data-room-type-id="@room.RoomtypeId">
                            Sửa
                        </button>
                        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-room-id="@room.Id">
                            Xóa
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <!-- Button Thêm phòng -->
    <button class="btn btn-success" data-toggle="modal" data-target="#addModal">Thêm Phòng</button>
</div>

<!-- Modal Thêm Phòng -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Thêm Phòng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Số Phòng</label>
                        <input type="text" asp-for="Room.RoomNumber" class="form-control" required />
                        <span asp-validation-for="Room.RoomNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Loại Phòng</label>
                        <select asp-for="Room.RoomtypeId" class="form-control" required>
                            <option value="">Chọn loại phòng</option>
                            @foreach (var roomType in Model.RoomTypes)
                            {
                                <option value="@roomType.Id">@roomType.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Room.RoomtypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Trạng Thái</label>
                        <select name="Room.Status" class="form-control" required>
                            <option value="Còn phòng">Còn phòng </option>
                            <option value="Hết phòng">Hết phòng </option>
                            <option value="Đang đặt cọc">Đang đặt cọc </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Hình Ảnh Phòng</label>
                        <input type="file" asp-for="Room.ImageFiles" class="form-control" multiple />
                        <span asp-validation-for="Room.ImageFiles" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Cập nhật Phòng -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-page-handler="Update"enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Cập Nhật Phòng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Room.Id" />
                    <div class="form-group">
                        <label>Số Phòng</label>
                        <input type="text" name="Room.RoomNumber" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Loại Phòng</label>
                        <select name="Room.RoomtypeId" class="form-control" required>
                            <option value="">Chọn loại phòng</option>
                            @foreach (var roomType in Model.RoomTypes)
                            {
                                <option value="@roomType.Id">@roomType.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Trạng Thái</label>
                        <select name="Room.Status" class="form-control" required>
                            <option value="Còn phòng">Còn phòng </option>
                            <option value="Hết phòng">Hết phòng </option>
                            <option value="Đang đặt cọc">Đang đặt cọc </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Hình Ảnh Phòng</label>
                        <input type="file" asp-for="Room.ImageFiles" class="form-control" multiple />
                        <span asp-validation-for="Room.ImageFiles" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Xóa Phòng -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Xóa Phòng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa phòng này?</p>
                    <input type="hidden" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var roomId = button.data('room-id');
            var roomNumber = button.data('room-number');
            var roomStatus = button.data('room-status');
            var roomTypeId = button.data('room-type-id');

            var modal = $(this);
            modal.find('input[name="Room.Id"]').val(roomId);
            modal.find('input[name="Room.RoomNumber"]').val(roomNumber);
            modal.find('select[name="Room.Status"]').val(roomStatus);
            modal.find('select[name="Room.RoomtypeId"]').val(roomTypeId);
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var roomId = button.data('room-id');
            console.log("Room ID:", roomId); // In ra để kiểm tra
            var modal = $(this);
            modal.find('input[name="id"]').val(roomId);
        });
    </script>
}
