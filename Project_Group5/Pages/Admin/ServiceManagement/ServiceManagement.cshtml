@page "/Admin/ServiceManagement"
@model Project_Group5.Pages.Admin.ServiceManagement.ServiceManagementModel
@{
    Layout = "_Layout";
}

<div class="container mx-auto p-5">
    <h1 class="text-3xl font-bold mb-5 text-green-700">Quản Lý Dịch Vụ</h1>

    <!-- Danh sách phòng -->
    <div class="mb-5 p-4 bg-white shadow-md rounded">
        <h2 class="text-xl font-semibold mb-3">Danh sách phòng</h2>
        <table class="min-w-full border border-gray-300">
            <thead class="bg-gray-200">
                <tr>
                    <th class="border border-gray-300 px-4 py-2">Số Phòng</th>
                    <th class="border border-gray-300 px-4 py-2">Loại Phòng</th>
                    <th class="border border-gray-300 px-4 py-2">Trạng Thái</th>
                    <th class="border border-gray-300 px-4 py-2">Dịch Vụ Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model.Rooms)
                {
                    <tr class="hover:bg-gray-100">
                        <td class="border border-gray-300 px-4 py-2">@room.RoomNumber</td>
                        <td class="border border-gray-300 px-4 py-2">@room.Roomtype?.Name</td>
                        <td class="border border-gray-300 px-4 py-2">@room.Status</td>
                        <td class="border border-gray-300 px-4 py-2">
                            @if (room.ServiceRegistrations != null && room.ServiceRegistrations.Any())
                            {
                                @foreach (var service in room.ServiceRegistrations)
                                {
                                    <p>@service.Service?.ServiceName - Số lượng: @service.Quantity</p>
                                }
                            }
                            else
                            {
                                <p>Không có dịch vụ</p>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Danh sách dịch vụ -->
    <div class="mb-5 p-4 bg-white shadow-md rounded">
        <h2 class="text-xl font-semibold mb-3">Danh sách dịch vụ</h2>
        <table class="min-w-full border border-gray-300">
            <thead class="bg-gray-200">
                <tr>
                    <th class="border border-gray-300 px-4 py-2">Tên dịch vụ</th>
                    <th class="border border-gray-300 px-4 py-2">Giá</th>
                    <th class="border border-gray-300 px-4 py-2">Trạng thái</th>
                    <th class="border border-gray-300 px-4 py-2">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.Services)
                {
                    <tr class="hover:bg-gray-100">
                        <td class="border border-gray-300 px-4 py-2">@service.ServiceName</td>
                        <td class="border border-gray-300 px-4 py-2">@service.Price ₫</td>
                        <td class="border border-gray-300 px-4 py-2">@service.Status</td>
                        <td class="border border-gray-300 px-4 py-2">
                            <a asp-page-handler="Edit" asp-route-id="@service.Id" class="bg-yellow-500 text-white hover:bg-yellow-600 rounded-md py-1 px-2">Sửa</a>
                            <a asp-page-handler="Delete" asp-route-id="@service.Id" class="bg-red-500 text-white hover:bg-red-600 rounded-md py-1 px-2">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Thêm dịch vụ mới -->
    <div class="p-4 bg-white shadow-md rounded">
        <h2 class="text-xl font-semibold mb-3">Thêm Dịch Vụ Mới</h2>
        <form method="post" asp-page-handler="AddService">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-3">
                <div>
                    <label for="ServiceName" class="block text-sm font-medium text-gray-700">Tên dịch vụ:</label>
                    <input type="text" id="ServiceName" name="ServiceName" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" required>
                </div>
                <div>
                    <label for="Price" class="block text-sm font-medium text-gray-700">Giá:</label>
                    <input type="number" id="Price" name="Price" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" required>
                </div>
                <div>
                    <label for="Status" class="block text-sm font-medium text-gray-700">Trạng thái:</label>
                    <select id="Status" name="Status" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200">
                        <option value="Available">Available</option>
                        <option value="Unavailable">Unavailable</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="bg-green-500 text-white hover:bg-green-600 rounded-md py-2 px-4">Thêm Dịch Vụ</button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
