@page "/Admin/Dashboard"
@model Project_Group5.Pages.Admin.DashBoard.DashboardModel
@{
    Layout = "_Layout";
}

<main id="main" class="main p-4">
    <div class="pagetitle mb-6">
        <h1 class="text-2xl font-bold">Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active text-gray-500">Thống kê khách sạn</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <!-- Dropdown chọn tháng -->
        <form method="get" asp-page="/Admin/Dashboard">
            <label for="month" class="mr-2">Chọn tháng:</label>
            <select id="month" name="month" class="mb-4">
                <option value="">Cả năm</option>
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(Model.SelectedMonth == i ? "selected" : "")">Tháng @i</option>
                }
            </select>
            <button type="submit" class="btn btn-primary">Lọc</button>
        </form>

        <div class="row mt-6">
            <div class="col-12">
                <div class="card bg-white shadow-lg rounded-lg p-4">
                    <div class="card-body">
                        <h3 class="text-lg font-bold mb-4 text-center">Doanh thu và Đơn đặt phòng hàng tháng (Năm nay)</h3>
                        <div class="d-flex justify-content-between">
                            <div style="flex: 1; margin-right: 10px;">
                                <h4 class="text-center mb-4">Doanh thu hàng tháng</h4>
                                <canvas id="revenueChart" style="width: 100%; height: 300px;"></canvas>
                            </div>
                            <div style="flex: 1; margin-left: 10px;">
                                <h4 class="text-center mb-4">Đơn đặt phòng hàng tháng</h4>
                                <canvas id="bookingChart" style="width: 100%; height: 300px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Biểu đồ doanh thu hàng tháng
    const revenueData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyRevenue));
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
            datasets: [{
                label: 'Doanh thu hàng tháng',
                data: revenueData,
                borderColor: 'rgba(75, 192, 192, 1)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderWidth: 2,
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Biểu đồ số đơn đặt phòng hàng tháng
    const bookingData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MonthlyBookings));
    const bookingCtx = document.getElementById('bookingChart').getContext('2d');
    new Chart(bookingCtx, {
        type: 'bar',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
            datasets: [{
                label: 'Số đơn đặt phòng',
                data: bookingData,
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 2
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

