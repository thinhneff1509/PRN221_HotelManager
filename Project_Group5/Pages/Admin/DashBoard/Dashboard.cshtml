@page "/Admin/Dashboard"
@model Project_Group5.Pages.Admin.DashBoard.DashboardModel
@{
    Layout = "_Layout";
}

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Dashboard</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    </head>
    <main id="main" class="main p-4">
        <div class="pagetitle mb-6">
            <h1 class="text-2xl font-bold">Dashboard</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active text-gray-500">Thống kê khách sạn</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section dashboard">
            <div class="row">
                <div class="col-lg-12">
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        <div class="card info-card sales-card bg-white shadow-lg rounded-lg p-4">
                            <div class="card-body">
                                <h5 class="card-title font-semibold">Doanh thu hàng tuần</h5>
                                <div class="flex items-center">
                                    <div class="card-icon rounded-full flex items-center justify-center bg-blue-500 text-white p-2">
                                        <i class="bi bi-currency-dollar"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 class="text-xl font-bold">TotalWeeklySales</h6>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card info-card revenue-card bg-white shadow-lg rounded-lg p-4">
                            <div class="card-body">
                                <h5 class="card-title font-semibold">Tổng số đơn đặt phòng</h5>
                                <div class="flex items-center">
                                    <div class="card-icon rounded-full flex items-center justify-center bg-green-500 text-white p-2">
                                        <i class="bi bi-cart"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 class="text-xl font-bold">TotalOrders</h6>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card info-card customers-card bg-white shadow-lg rounded-lg p-4">
                            <div class="card-body">
                                <h5 class="card-title font-semibold">Tổng số khách hàng</h5>
                                <div class="flex items-center">
                                    <div class="card-icon rounded-full flex items-center justify-center bg-purple-500 text-white p-2">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 class="text-xl font-bold">Total</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 mt-6">
                        <div class="card bg-white shadow-lg rounded-lg p-4">
                            <div class="card-body text-center">
                                <h3 class="text-lg font-bold mb-4">Thống kê Đơn hàng (Tháng)</h3>
                                <canvas id="myChart1" style="width: 100%; height: 400px;"></canvas>
                                <canvas id="myChart2" class="mt-6" style="width: 80%; height: 400px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

