@page "/Checkout"
@model Project_Group5.Pages.Checkout.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "_Layout";
}

<!-- breadcrumb start-->
<!--================Checkout Area =================-->
<section class="checkout_area pt-10 pb-10">
    <div class="container mx-auto">
        <div class="billing_details bg-white shadow-md rounded-lg p-6">
            <div class="flex flex-col md:flex-row">
                <div class="md:w-2/3 pr-4">
                    <h3 class="text-lg font-semibold mb-4">Billing Details</h3>
                    <form class="space-y-4" action="#" method="post" novalidate="novalidate">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="form-group">
                                <input type="text" class="form-control border border-gray-300 rounded-md p-2 w-full" id="name" name="name" placeholder="Full name" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control border border-gray-300 rounded-md p-2 w-full" id="number" name="number" placeholder="Phone number" />
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control border border-gray-300 rounded-md p-2 w-full" id="email" name="compemailany" placeholder="Email Address" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control border border-gray-300 rounded-md p-2 w-full" id="add1" name="add1" placeholder="Address" />
                        </div>
                        <div class="form-group">
                            <div class="flex items-center">
                                <input type="checkbox" id="f-option2" name="selector" class="mr-2" />
                                <label for="f-option2" class="text-gray-700">Create an account?</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <h3 class="text-lg font-semibold">Shipping Details</h3>
                            <div class="flex items-center">
                                <input type="checkbox" id="f-option3" name="selector" class="mr-2" />
                                <label for="f-option3" class="text-gray-700">Ship to a different address?</label>
                            </div>
                            <textarea class="form-control border border-gray-300 rounded-md p-2 w-full" name="message" id="message" rows="1" placeholder="Order Notes"></textarea>
                        </div>
                    </form>
                </div>
                <div class="md:w-1/3">
                    <div class="order_box bg-gray-100 p-4 rounded-lg shadow-md">
                        <h2 class="text-lg font-semibold mb-4">Your Order</h2>
                        <ul class="list-disc pl-5 mb-4">
                            <li class="flex justify-between">
                                <span>Product</span>
                                <span>Total</span>
                            </li>
                            <li class="flex justify-between">
                                <span>Fresh Blackberry x 02</span>
                                <span>$720.00</span>
                            </li>
                        </ul>
                        <ul class="list-disc pl-5">
                            <li class="flex justify-between">
                                <span>Subtotal</span>
                                <span>$2160.00</span>
                            </li>
                            <li class="flex justify-between">
                                <span>Shipping</span>
                                <span>Flat rate: $50.00</span>
                            </li>
                            <li class="flex justify-between">
                                <span>Discount</span>
                                <span>$2160.00</span>
                            </li>
                            <li class="flex justify-between font-bold">
                                <span>Total</span>
                                <span>$2210.00</span>
                            </li>
                        </ul>
                        <div class="payment_item mt-4">
                            <div class="flex items-center">
                                <input type="radio" id="f-option5" name="selector" class="mr-2" />
                                <label for="f-option5" class="text-gray-700">Check payments</label>
                            </div>
                            <p class="text-sm text-gray-600 mt-1">
                                Please send a check to Store Name, Store Street, Store Town,
                                Store State / County, Store Postcode.
                            </p>
                        </div>
                        <div class="payment_item mt-4">
                            <div class="flex items-center">
                                <input type="radio" id="f-option6" name="selector" class="mr-2" />
                                <label for="f-option6" class="text-gray-700">Paypal</label>
                                <img src="img/product/single-product/card.jpg" alt="" class="ml-2" />
                            </div>
                            <p class="text-sm text-gray-600 mt-1">
                                Please send a check to Store Name, Store Street, Store Town,
                                Store State / County, Store Postcode.
                            </p>
                        </div>
                        <div class="creat_account mt-4">
                            <input type="checkbox" id="f-option4" name="selector" class="mr-2" />
                            <label for="f-option4" class="text-gray-700">I’ve read and accept the </label>
                            <a href="#" class="text-blue-500 hover:underline">terms & conditions*</a>
                        </div>
                        <a class="btn_3 bg-blue-500 text-white px-4 py-2 rounded mt-4 inline-block hover:bg-blue-600" href="#">Proceed to Paypal</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
