<body>
    <!--Header-->
    <header class="bg-[#FFF] fixed nav_header w-full shadow-lg z-20 py-1">
        <div class="max-content flex items-stretch justify-between gap-5 md:px-0 py-2 max-md:flex-wrap px-5">
            <a class="py-auto" href="/">
                <img loading="lazy" src="~/assets/images/Logo.png"
                     class="pt-[5px] md:pt-0 aspect-[1.82] object-contain object-center w-[80px] md:w-[100px] overflow-hidden shrink-0 max-w-full" />
            </a>

            <!-- Header Navigation Links -->
            <div class="hidden md:flex items-center justify-end flex-grow gap-5">
                <a href="/home" class="text-gray-800 hover:text-blue-600">Trang chủ</a>
                <a href="/gioithieu" class="text-gray-800 hover:text-blue-600">Về chúng tôi</a>

                @{
                    // Kiểm tra nếu người dùng đã đăng nhập và có vai trò Admin, Customer hoặc Receptionist
                    if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Customer") || User.IsInRole("Receptionist")))
                    {
                        <a href="/ServiceOrder" class="text-gray-800 hover:text-blue-600">Dịch vụ</a>
                    }
                }

                <a href="/Room/booking" class="text-gray-800 hover:text-blue-600">Xem phòng</a>
                <!-- Account Section -->
                <div class="relative">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            var role = User.IsInRole("Admin") ? 1 :
                            User.IsInRole("Customer") ? 2 :
                            User.IsInRole("Receptionist") ? 3 : 0;

                            if (role == 1)  // Nếu role là Admin
                            {
                                <div class="flex items-center space-x-2">
                                    <span class="text-gray-800 font-semibold">Hello, Admin @User.Identity.Name</span>
                                    <div class="relative group">
                                        <button class="text-gray-800 hover:text-blue-600">Admin Menu <i class="fa-solid fa-sort-down"></i></button>
                                        <div class="hidden group-hover:block absolute right-0 w-48 bg-white border border-gray-200 rounded-md shadow-lg">
                                            <a href="/Admin/Dashboard" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Dashboard</a>
                                            <a href="/Admin/UserManagement" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Manage Users</a>
                                            <a href="/Admin/PaymentManagement" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Manage Payment</a>
                                            <a href="/Admin/RoomManagement" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Manage Room</a>
                                            <a href="/Login?handler=Logout" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Logout</a>
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (role == 2)  // Nếu role là Customer
                            {
                                <div class="flex items-center space-x-2">
                                    <span class="text-gray-800 font-semibold">Hello, @User.Identity.Name</span>
                                    <a href="/Customer/Profile" class="text-gray-800 hover:text-blue-600">Profile</a>
                                    <a href="/Login?handler=Logout" class="text-gray-800 hover:text-blue-600">Logout</a>
                                    <!-- Icon Đặt Phòng -->
                                    <div class="relative">
                                        <a href="/gioithieu" class="relative flex items-center justify-center w-10 h-10 text-white bg-blue-600 rounded-full hover:bg-blue-700 focus:outline-none">
                                            <i class="fas fa-door-open text-lg"></i>
                                            <!-- Badge số lượng đặt phòng, nếu cần -->
                                            <span class="absolute top-0 right-0 flex items-center justify-center w-4 h-4 text-xs font-semibold text-white bg-red-500 rounded-full">100</span>
                                        </a>
                                    </div>
                                </div>

                            }
                            else if (role == 3)  // Nếu role là Receptionist
                            {
                                <div class="flex items-center space-x-2">
                                    <span class="text-gray-800 font-semibold">Hello, Receptionist @User.Identity.Name</span>
                                    <div class="relative group">
                                        <button class="text-gray-800 hover:text-blue-600">Receptionist Menu <i class="fa-solid fa-sort-down"></i></button>
                                        <div class="hidden group-hover:block absolute right-0 w-48 bg-white border border-gray-200 rounded-md shadow-lg">
                                            <a href="/Receptionist/ManageBookings" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Manage Bookings</a>
                                            <a href="/Receptionist/ViewMessages" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">View Messages</a>
                                            <a href="/Login?handler=Logout" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Logout</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <!-- Hiển thị khi người dùng chưa đăng nhập -->
                            <div class="flex items-center space-x-2">
                                <a href="/Login" class="text-gray-800 hover:text-blue-600">Đăng nhập</a>
                                <a href="/Register" class="text-gray-800 hover:text-blue-600">Đăng ký</a>
                            </div>
                        }
                    }
                </div>
            </div>

        </div>
    </header>


