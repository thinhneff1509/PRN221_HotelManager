                    </svg>
                </div>
                <!--Modal-->
                <div class="modal hidden" id="modalContainer">
                    <div id="close_menu" class="pt-2 hidden" onclick="closeModalMobile()">
                        <svg width="32" height="32" viewBox="0 0 16 16" fill="#222"
                             xmlns="http://www.w3.org/2000/svg">
                            <path d="M7.99999 7.05732L11.3 3.75732L12.2427 4.69999L8.94266 7.99999L12.2427 11.3L11.3 12.2427L7.99999 8.94266L4.69999 12.2427L3.75732 11.3L7.05732 7.99999L3.75732 4.69999L4.69999 3.75732L7.99999 7.05732Z"
                                  fill="#222" />
                        </svg>
                    </div>
                    <div class="h-screen mt-[4px] p-8 absolute z-50 bg-white top-14 left-0 right-0 md:relative md:top-0 md:bg-transparent items-stretch flex flex-col md:flex-row gap-5">
                        <div class="text-gray-700  text-[18px] font-medium leading-6  whitespace-nowrap">
                            <a onclick="closeModalMobile()" href="/">
                                Trang chủ
                            </a>
                        </div>
                        <div class="text-gray-700  text-[18px] font-medium leading-6 leading-6">
                            <a onclick="closeModalMobile()" href="">
                                Giới thiệu
                            </a>
                        </div>
                        <div class="menu relative">
                            <div class="text-gray-700  text-[18px] font-medium leading-6 leading-6">
                                <li onclick="closeModalMobile()">
                                    Danh sách khách sạn
                                </li>
                            </div>
                            <!-- Sub Menu -->
                            <ul id="sub-menu"
                                class="hidden sub-menu transition background_second  py-2 flex flex-col  text-base font-semibold leading-6 rounded-lg border border-gray-100 border-solid shadow-lg text-neutral-800">

                                <li class="nav__link2 py-2 pl-4">
                                    <a href="#" onclick="highlightParent(this)" class="text-[18px]">Hennessy Mũi Né</a>
                                </li>
                                <li class="nav__link2 py-2 pl-4">
                                    <a href="#" onclick="highlightParent(this)" class="text-[18px]">Hennessy Bắc Giang</a>
                                </li>
                                <li class="nav__link2 py-2 pl-4">
                                    <a href="#" onclick="highlightParent(this)" class="text-[18px]">Hennessy Bắc Ninh</a>
                                </li>
                                <li class="nav__link2 py-2 pl-4">
                                    <a href="#" onclick="highlightParent(this)" class="text-[18px]">Hennessy Kim Bôi</a>
                                </li>
                                <li class="nav__link2 py-2 pl-4">
                                    <a href="#" onclick="highlightParent(this)" class="text-[18px]">Hennessy Hải Dương</a>
                                </li>
                                <li class="nav__link2 py-2 pl-4">
                                    <a href="#" onclick="highlightParent(this)" class="text-[18px]">Hennessy Phú Yên</a>
                                </li>
                            </ul>
                        </div>

                        <div class="text-gray-700  text-[18px] font-medium leading-6  whitespace-nowrap">
                            <a onclick="closeModalMobile()" href="">
                                Liên hệ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="pt-20">
        @RenderBody()
    </main>


    <!--Footer-->
