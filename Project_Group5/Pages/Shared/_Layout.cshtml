<body>
    <!--Header-->
    <header class="bg-[#FFF]  fixed nav_header w-full shadow-lg z-20">
        <div class="max-content flex items-stretch justify-between gap-5 md:px-0 py-2 max-md:flex-wrap px-5">
            <a class="py-auto" href="/">
                <img loading="lazy" src="~/assets/images/Logo.png"
                     class="pt-[5px] md:pt-0 aspect-[1.82] object-contain object-center w-[80px] md:w-[100px] overflow-hidden shrink-0 max-w-full" />
            </a>

            <!-- Header Navigation Links -->
            <div class="hidden md:flex items-center justify-end flex-grow gap-5">
                <a href="/" class="text-gray-800 hover:text-blue-600">Trang chủ</a>
                <a href="/gioi-thieu" class="text-gray-800 hover:text-blue-600">Giới thiệu</a>
                <a href="/lien-he" class="text-gray-800 hover:text-blue-600">Liên hệ</a>

                <!-- Account Section -->
                <div class="relative">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="flex items-center space-x-2">
                            <span class="text-gray-800 font-semibold">Hello, @User.Identity.Name</span>
                            <div class="relative group">
                                <button class="text-gray-800 hover:text-blue-600">Tài khoản <i class="fa-solid fa-sort-down"></i></button>
                                <div class="hidden group-hover:block absolute right-0 w-48 bg-white border border-gray-200 rounded-md shadow-lg">
                                    <a href="/Customer/Profile" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Profile</a>
                                    <form method="post" asp-page="/Login/Logout">
                                        <button type="submit" class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100">Logout</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="flex items-center space-x-2">
                            <a href="/Login" class="text-gray-800 hover:text-blue-600">Đăng nhập</a>
                            <a href="/Register" class="text-gray-800 hover:text-blue-600">Đăng ký</a>
                        </div>
                    }
                </div>
            </div>
        </div>

            <!--Header mobile-->
            <div class="block md:hidden">
                <!--Menu-->
                <div id="open_menu" onclick="openModal()"
                     class="min-sm:block md:block lg:hidden  cursor-pointer pt-3">
