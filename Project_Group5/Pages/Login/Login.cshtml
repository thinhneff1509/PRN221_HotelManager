@page "/Login"
@model Project_Group5.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<!--================Login Box Area =================-->
<section class="login_box_area py-16 bg-gray-100">
    <div class="container mx-auto px-5">
        <div class="flex flex-col md:flex-row items-center">
            <!-- Left Side (Image & Info) -->
            <div class="w-full md:w-1/2 bg-cover bg-center relative" style="background-image: url('~/assets/images/login-background.jpg');">
                <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-8 text-white">
                    <h4 class="text-2xl font-semibold mb-4 text-black">New to our website?</h4>
                    <p class="mb-6 text-black">There are advances being made in science and technology every day, and a good example of this is the...</p>
                    <a class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition duration-300" href="~/register">Create an Account</a>
                </div>
            </div>

            <!-- Right Side (Login Form) -->
            <div class="w-full md:w-1/2 bg-white p-8 shadow-lg rounded-lg mt-8 md:mt-0 md:ml-8">
                <h3 class="text-2xl font-semibold text-center mb-6">Log in to enter</h3>

                <!-- Success Message -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success text-center mb-4">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form class="space-y-6" method="post">
                    <!-- Username Field -->
                    <div>
                        <input type="text" class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-600"
                               asp-for="Username" placeholder="Username"
                               onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
                    </div>

                    <!-- Password Field -->
                    <div>
                        <input type="password" class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-600"
                               asp-for="Password" placeholder="Password"
                               onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                    </div>

                    <!-- Remember Me Checkbox -->
                    <div class="flex items-center">
                        <input type="checkbox" id="f-option2" name="RememberMe" class="mr-2">
                        <label for="f-option2" class="text-gray-700">Keep me logged in</label>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">Log In</button>
                    </div>

                    <!-- Forgot Password Link -->
                    <div class="text-center">
                        <a href="/ForgotPassword" class="text-blue-600 hover:underline">Forgot Password?</a>
                    </div>
                    <!-- Login with Google Button -->
                    <div class="text-center mt-4">
                        <a href="/signin-google" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
                            Login with Google
                        </a>
                    </div>
                </form>

                <!-- Error Message -->
                @if (!ModelState.IsValid)
                {
                    <p class="text-red-500 mt-4 text-center">Invalid username or password.</p>
                }
            </div>
        </div>
    </div>
</section>
