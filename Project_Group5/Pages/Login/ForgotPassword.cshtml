@page "/ForgotPassword"
@model Project_Group5.Pages.Login.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<!--================ Forgot Password Area =================-->
<section class="forgot_password_area py-16 bg-gray-100">
    <div class="container mx-auto px-5">
        <div class="flex justify-center">
            <div class="w-full md:w-1/2 bg-white p-8 shadow-lg rounded-lg">
                <h3 class="text-2xl font-semibold text-center mb-6">Forgot your password?</h3>

                <!-- Hiển thị thông báo thành công nếu có trong TempData -->
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success text-center mb-4">
                        @TempData["Message"]
                    </div>
                }

                <form method="post">
                    <!-- Email Field -->
                    <div class="mb-4">
                        <input type="email" class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-600"
                               asp-for="Email" placeholder="Enter your email"
                               onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your email'" required>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
                            Send Reset Link
                        </button>
                    </div>

                    <!-- Error Message -->
                    @if (!ModelState.IsValid)
                    {
                        <p class="text-red-500 mt-4 text-center">Please enter a valid email.</p>
                    }
                </form>
            </div>
        </div>
    </div>
</section>
