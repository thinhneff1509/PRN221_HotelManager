@page "/Checkout"
@model Project_Group5.Pages.Checkout.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "_Layout";
}
@if (ViewData["PaymentMessage"] != null)
{
    <div class="alert alert-success">
        @ViewData["PaymentMessage"]
    </div>
}

<section class="checkout_area pt-10 pb-10">
    <div class="container mx-auto">
        <div class="billing_details bg-white shadow-md rounded-lg p-6">
            <div class="flex flex-col md:flex-row">
                <div class="md:w-2/4 pr-4">
                    <h3 class="text-lg font-semibold mb-4">Billing Details</h3>
                    <form class="space-y-4" method="post">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="form-group">
                                <input type="text" class="form-control border border-gray-300 rounded-md p-2 w-full" asp-for="FullName" placeholder="Full name" />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control border border-gray-300 rounded-md p-2 w-full" asp-for="PhoneNumber" placeholder="Phone number" />
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control border border-gray-300 rounded-md p-2 w-full" asp-for="Email" placeholder="Email Address" />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control border border-gray-300 rounded-md p-2 w-full" asp-for="Address" placeholder="Address" />
                        </div>
                    </form>
                </div>

                
                    <div class="md:w-2/4">
                        <form method="post">
                        <div class="order_box bg-gray-100 p-4 rounded-lg shadow-md">

                            <h2 class="text-lg font-semibold mb-4">Your Order</h2>
                            <ul class="list-disc pl-5 mb-4">
                                <li class="flex justify-between">
                                    <span>Product</span>
                                    <span>Total</span>
                                </li>
                                @if (Model.SelectedRooms != null)
                                {
                                    foreach (var room in Model.SelectedRooms)
                                    {
                                        <li class="flex justify-between">
                                            <span>@room.Name x @room.RoomList.Count</span>
                                            <span>@String.Format("{0:N0}", room.Price * Model.StayDuration) VND</span>
                                        </li>
                                    }
                                }
                            </ul>

                            <ul class="list-disc pl-5">
                                <li class="flex justify-between font-bold">
                                    <span>Total</span>
                                    <span>@String.Format("{0:N0}", Model.TotalAmount) VND</span>
                                </li>
                            </ul>

                            <!-- Phần các lựa chọn thanh toán -->
                            <div class="payment_item mt-4">
                                <div class="flex items-center">
                                    <input type="radio" id="f-option5" name="paymentMethod" value="Check" class="mr-2" />
                                    <label for="f-option5" class="text-gray-700">Credit Card</label>
                                </div>
                                <p class="text-sm text-gray-600 mt-1">
                                    Please send a check to Store Name, Store Street, Store Town,
                                    Store State / County, Store Postcode.
                                </p>
                            </div>
                            <div class="payment_item mt-4">
                                <div class="flex items-center">
                                    <input type="radio" id="f-option6" name="paymentMethod" value="Paypal" class="mr-2" />
                                    <label for="f-option6" class="text-gray-700">Paypal</label>
                                    <img src="~/assets/images/card.jpg" alt="Paypal" class="ml-2" />
                                </div>
                                <p class="text-sm text-gray-600 mt-1">
                                    Please send a check to Store Name, Store Street, Store Town,
                                    Store State / County, Store Postcode.
                                </p>
                            </div>

                            <!-- Các nút thanh toán -->
                            <button type="submit" formaction="/Checkout?handler=OnPostCheckout" name="paymentMethod" value="VNPAY" class="btn_3 bg-blue-500 text-white px-4 py-2 rounded mt-4 inline-block hover:bg-blue-600">
                                Thanh toán qua VNPAY
                            </button>
                            <button type="submit" name="paymentMethod" value="Paypal" class="btn_3 bg-blue-500 text-white px-4 py-2 rounded mt-4 inline-block hover:bg-blue-600">
                                Proceed to Paypal
                            </button>
                        </div>
                    </form>

                    </div>
        </div>
    </div>
    </div>
</section>


