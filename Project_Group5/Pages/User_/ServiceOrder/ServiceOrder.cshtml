@page "/ServiceOrder"
@model Project_Group5.Pages.ServiceOrder.ServiceOrderModel
@{
	Layout = "_Layout";
}
<body class="bg-gray-100 p-5">
    <div class="container">
        <!-- Header -->
        <h1 class="text-2xl font-bold mb-5 text-green-700">Sử Dụng Dịch Vụ Và Thanh Toán</h1>

        <!-- Room List Section -->
        <div class="mb-5 p-4 bg-white shadow-md rounded">
            <h2 class="text-lg font-semibold mb-3">Danh sách phòng</h2>

            <!-- Room type labels -->
            <div class="flex flex-wrap gap-3 mb-3">
                <span class="badge bg-success">Phòng được chọn</span>
                <span class="badge bg-warning">Phòng Deluxe (DLX)</span>
                <span class="badge bg-purple-500 text-white">Phòng Superior (SUP)</span>
                <span class="badge bg-info text-dark">Phòng Standard (STD)</span>
                <span class="badge bg-primary">Phòng Suite (SUT)</span>
                <span class="badge bg-secondary">Phòng khác</span>
            </div>

            <!-- Room buttons -->
            <div class="grid grid-cols-5 gap-3">
                <button class="btn btn-outline-danger">Phòng 102</button>
                <button class="btn btn-outline-warning">Phòng 103</button>
                <button class="btn btn-outline-info">Phòng 104</button>
                <button class="btn btn-outline-success">Phòng 105</button>
                <button class="btn btn-outline-info">Phòng 106</button>
                <button class="btn btn-outline-warning">Phòng 109</button>
                <button class="btn btn-outline-danger">Phòng 203</button>
                <button class="btn btn-outline-success">Phòng 208</button>
                <button class="btn btn-outline-danger">Phòng 210</button>
            </div>
        </div>

        <!-- Service and Payment Section -->
        <div class="mb-5 p-4 bg-white shadow-md rounded">
            <h2 class="text-lg font-semibold mb-3">Danh sách dịch vụ</h2>
            <form method="post" asp-page-handler="AddService">
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label for="serviceType" class="form-label">Loại dịch vụ:</label>
                        <select id="serviceType" name="ServiceId" class="form-select">
                            <!-- Điền các dịch vụ từ database -->
                            <option value="1">Ăn uống</option>
                            <option value="2">Spa</option>
                            <!-- Các dịch vụ khác -->
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="quantity" class="form-label">Số lượng:</label>
                        <input type="number" id="quantity" name="Quantity" class="form-control" value="1" min="1">
                    </div>
                </div>

                <input type="hidden" name="BookingId" value="@Model.BookingId" />

                <button type="submit" class="btn btn-outline-success w-full">Thêm Dịch Vụ</button>
            </form>

            <div class="mt-4">
                <label for="total" class="form-label">Tổng tiền:</label>
                <input type="text" id="total" class="form-control mb-2" value="1.400.000,00 ₫" readonly>

                <label for="discount" class="form-label">Giảm giá:</label>
                <input type="number" id="discount" class="form-control mb-2" value="0">

                <div class="form-check mb-2">
                    <input type="checkbox" class="form-check-input" id="printInvoice">
                    <label class="form-check-label" for="printInvoice">In hóa đơn</label>
                </div>

                <button type="submit" class="btn btn-success w-full">Thanh Toán</button>
            </div>
        </div>

        <!-- Invoice Section -->
        <div class="p-4 bg-white shadow-md rounded">
            <h2 class="text-lg font-semibold mb-3">Hóa đơn tiền phòng</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Tên phòng</th>
                        <th>Đơn giá</th>
                        <th>Ngày nhận</th>
                        <th>Ngày trả</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Phòng 208</td>
                        <td>10.000.000,00 ₫</td>
                        <td>5/16/2018</td>
                        <td>5/17/2018</td>
                        <td>10.000.000,00 ₫</td>
                    </tr>
                </tbody>
            </table>

            <h2 class="text-lg font-semibold mb-3">Hóa đơn dịch vụ</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên dịch vụ</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Tam dương trùng phùng với...</td>
                        <td>200.000,00 ₫</td>
                        <td>2</td>
                        <td>400.000,00 ₫</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Mục khoanh chiến vàng &...</td>
                        <td>500.000,00 ₫</td>
                        <td>2</td>
                        <td>1.000.000,00 ₫</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap and Tailwind Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>