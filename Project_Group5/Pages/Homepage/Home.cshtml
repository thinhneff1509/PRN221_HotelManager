                <a href="/User_/Rooms/List/1" class="btn btn-primary mt-4">Xem thêm</a>
            </div>
        </div>
        <!-- Thẻ phòng đôi -->
        <div class="card shadow-lg rounded-lg overflow-hidden">
            <img src="~/assets/images/doubleroom.jpg" alt="Executive Double Room" class="object-cover h-64 w-full">
            <div class="p-5">
                <h3 class="text-2xl font-bold">Executive Deluxe Room</h3>
                <p class="text-gray-600 mt-4">Executive Deluxe Room là phòng gia đình cao cấp nhất...</p>
                <a href="/User_/Rooms/List/2" class="btn btn-primary mt-4">Xem thêm</a>
            </div>
        </div>
        <!-- Thẻ phòng hạng sang -->
        <div class="card shadow-lg rounded-lg overflow-hidden">
            <img src="~/assets/images/phonghangsang.jpg" alt="Premium Ocean Wing" class="object-cover h-64 w-full">
            <div class="p-5">
                <h3 class="text-2xl font-bold">EXECUTIVE SUITE Ocean Wing</h3>
                <p class="text-gray-600 mt-4">Với thiết kế pha trộn giữa sự tiện nghi và phong cách độc đáo...</p>
                <a href="/User_/Rooms/List/3" class="btn btn-primary mt-4">Xem thêm</a>
            </div>
        </div>
    </div>
</section>

