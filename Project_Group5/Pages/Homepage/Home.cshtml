<script>
    const swiper = new Swiper('.mySwiper_mb', {
        loop: true, // Cho phép lặp lại các slide
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        effect: 'slide', // Hiệu ứng cuộn slide
