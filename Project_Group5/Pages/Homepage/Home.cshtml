@page "/Home"
@model Project_Group5.Pages.Homepage.HomeModel
@{
    Layout = "_Layout";
}

<style>
    /* Hiệu ứng phóng to khi rê chuột */
    .hover\\:scale-105:hover {
        transform: scale(1.05);
    }

    /* Chuyển tiếp cho hiệu ứng mượt hơn */
    .transition {
        transition: all 0.3s ease;
    }

    /* Hiệu ứng làm mờ khi rê chuột vào hình ảnh */
    .hover\\:opacity-75:hover {
        opacity: 0.75;
    }
</style>




<!--Banner-->
<section id="banner" class="z-30 flex-col items-stretch overflow-hidden justify-center ">
    <div class="swiper mySwiper_mb">
        <div class="swiper-wrapper">

            <div class="swiper-slide">
                <a href=@@Url.Content(item.Link) target="_blank">
                    <img class="z-1 banner-img w-full object-cover inset-0 blur-image_banner"
                         src="~/assets/images/Cong-vien-1-1-scaled.jpg" alt="" />
                </a>
                <div style="width:100vw; height:100vh"
                     class=" absolute top-0 left-0 bg-black bg-opacity-30 flex flex-col items-stretch"></div>
                <div class="banner-content ">
                    <p class="banner-title "></p>
                    <p class="banner-title uppercase ">
                        DTF Hennessy - Đơn vị cung cấp hệ thống khách sạn cao cấp uy tín hàng đầu
                        Việt Nam
                    </p>
                </div>
            </div>


        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</section>
<!--Giới thiệu chung-->
<section class="container mx-auto my-10 py-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
        <div class="flex flex-col space-y-6">
            <div class="border-t-4 border-orange-500 w-24"></div>
            <h2 class="text-4xl md:text-5xl text-blue-900 font-semibold leading-snug">Giới thiệu chung về DTF Hotel</h2>
            <p class="text-gray-700 text-lg md:text-xl leading-relaxed">
                Thành lập từ năm 2018, Hennessy Hospitality Group là thương hiệu quản lý chuỗi khách sạn tiêu chuẩn của Tập đoàn Hennessy.Lấy cảm hứng từ vòng tròn Hennessy trong quan niệm Phật giáo - vòng tròn tượng trưng cho sự sống bất tận và mối tương quan giữa con người với thiên nhiên, HHG muốn khắc họa lại hành trình đi tìm kiếm hạnh phúc của mỗi người và lan tỏa tới cộng đồng sứ mệnh phụng sự khách hàng và phụng sự xã hội của chúng tôi.
            </p>
            <a href="#" class="btn btn-primary py-2 px-4 rounded-full">Xem thêm</a>
        </div>
        <div>
            <img src="~/assets/images/Ảnh 2.png" alt="Giới thiệu chung về Hennessy Group" class="rounded-lg shadow-lg w-full h-auto">
        </div>
    </div>
</section>


<!--Các dịch vụ-->
