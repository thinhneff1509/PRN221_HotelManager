@page
@model WebApplication2.Pages.Room.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Room</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <main>
        <div class="container my-5">
            <div class="row align-items-center">
                <!-- Left section: Image Carousel -->
                <div class="col-md-6">
                    <div id="roomCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="https://media.sohuutritue.net.vn/files/huongmi/2018/07/13/muong-thanh-grand-ha-long-3-0638.png" class="d-block w-100" alt="Room Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="https://cdn2.vietnambooking.com/wp-content/uploads/hotel_pro/hotel_345614/f58fc5baaf4693db13807a43ca4396e7.jpg" class="d-block w-100" alt="Room Image 2">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <p class="text-center mt-2">Nhấn vào hình để xem thêm</p>
                </div>

                <!-- Right section: Room Details -->
                <div class="col-md-6">
                    <h2>Phòng Đơn Deluxe</h2>
                    <p><strong>29 m²</strong> | 1 Giường King</p>
                    <p><em>[Deluxe Single Room]</em></p>

                    <!-- Amenities List -->
                    <p>Danh sách tiện ích:</p>
                    <div class="d-flex justify-content-start mb-4">
                        <div class="me-3 text-center">
                            <i class="bi bi-wifi"></i>
                            <p>Wi-Fi</p>
                        </div>
                        <div class="me-3 text-center">
                            <i class="bi bi-lamp"></i>
                            <p>Đèn</p>
                        </div>
                        <div class="me-3 text-center">
                            <i class="bi bi-hair-dryer"></i>
                            <p>Máy sấy</p>
                        </div>
                        <div class="me-3 text-center">
                            <i class="bi bi-air-conditioner"></i>
                            <p>Điều hòa</p>
                        </div>
                        <div class="text-center">
                            <i class="bi bi-no-smoking"></i>
                            <p>Không hút thuốc</p>
                        </div>
                    </div>

                    <!-- Price Section -->
                    <p class="price-label">Giá chỉ từ</p>
                    <p class="price">1.150.000 VND / đêm</p>
                    <a href="/Room/Detail" class="btn btn-primary">Lựa chọn <i class="bi bi-chevron-down"></i></a>
                </div>
            </div>

            <div class="row align-items-center">
                <!-- Left section: Image Carousel -->
                <div class="col-md-6">
                    <div id="roomCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="https://cf.bstatic.com/xdata/images/hotel/max1024x768/415706910.jpg?k=fb6d2829f77b0f03dda6a9217d6859db818ab1320a39a7c5bb63ccd50b437fb1&o=&hp=1" class="d-block w-100" alt="Room Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="https://q-xx.bstatic.com/xdata/images/hotel/max500/415707063.jpg?k=3e060a4e3ab609fbb072d9d768dbc10365e76e387cbbef730b24872d875c6e28&o=" class="d-block w-100" alt="Room Image 2">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <p class="text-center mt-2">Nhấn vào hình để xem thêm</p>
                </div>

                <!-- Right section: Room Details -->
                <div class="col-md-6">
                    <h2>Phòng Đơn Deluxe</h2>
                    <p><strong>29 m²</strong> | 1 Giường King</p>
                    <p><em>[Deluxe Single Room]</em></p>

                    <!-- Amenities List -->
                    <p>Danh sách tiện ích:</p>
                    <div class="d-flex justify-content-start mb-4">
                        <div class="me-3 text-center">
                            <i class="bi bi-wifi"></i>
                            <p>Wi-Fi</p>
                        </div>
                        <div class="me-3 text-center">
                            <i class="bi bi-lamp"></i>
                            <p>Đèn</p>
                        </div>
                        <div class="me-3 text-center">
                            <i class="bi bi-hair-dryer"></i>
                            <p>Máy sấy</p>
                        </div>
                        <div class="me-3 text-center">
                            <i class="bi bi-air-conditioner"></i>
                            <p>Điều hòa</p>
                        </div>
                        <div class="text-center">
                            <i class="bi bi-no-smoking"></i>
                            <p>Không hút thuốc</p>
                        </div>
                    </div>

                    <!-- Price Section -->
                    <p class="price-label">Giá chỉ từ</p>
                    <p class="price">1.150.000 VND / đêm</p>
                    <a href="/Room/Detail" class="btn btn-primary">Lựa chọn <i class="bi bi-chevron-down"></i></a>

                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            font-weight: bold;
            font-size: 1.75rem;
        }

        .carousel-inner img {
            border-radius: 10px;
        }

        .text-center p {
            margin: 0;
            font-size: 0.9rem;
        }

        .price-label {
            font-weight: bold;
            color: #6c757d;
        }

        .price {
            font-size: 1.5rem;
            color: #d9534f;
            font-weight: bold;
        }

        button.btn-primary {
            background-color: #c39d77;
            border-color: #c39d77;
        }

            button.btn-primary:hover {
                background-color: #b58969;
                border-color: #b58969;
            }

    </style>
</body>

</html>